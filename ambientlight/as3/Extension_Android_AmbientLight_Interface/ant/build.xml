<?xml version="1.0" encoding="UTF-8"?>

<project name="Native Extension - Android - Ambient Light"
         basedir="../"
         default="00. [build extension]">

	<property name="res.source.dir"
	          value="/Users/patrick/workspaces/github/Air Mobile Extensions/ambientlight/native_android/Extension_Android_AmbientLight/res/" />

	<property name="swc.name" value="android_ambientlight_extension.swc" />

	<fdt.loadProjectProperties projectname="Extension_Android_AmbientLight_Interface" />

	<target name="00. [build extension]">

		<delete dir="build" />

		<mkdir dir="build/ane/Android-ARM/res" />

		<copy todir="build/ane/Android-ARM/res">
			<fileset dir="${res.source.dir}" />
		</copy>

		<jar destfile="build/ane/Android-ARM/ambientlight.jar"
		     basedir="${res.source.dir}" />

		<copy todir="build/ane/">
			<fileset file="./src/extension.xml" />
		</copy>

		<copy todir="build/ane/">
			<fileset file="./bin/${swc.name}" />
		</copy>

		<unzip src="./build/ane/${swc.name}" dest="./build/ane/" />

		<move file="./build/ane/library.swf" todir="./build/ane/Android-ARM/" />

		<java jar="${FDTProjectSdkPath}/lib/adt.jar" fork="true">
			<arg value="-package" />

			<arg value="-storetype" />
			<arg value="PKCS12" />
			<arg value="-keystore" />
			<arg value="./cert/exampleCert.p12" />
			<arg value="-storepass" />
			<arg value="test" />

			<arg value="-tsa" />
			<arg value="none" />

			<arg value="-target" />
			<arg value="ane" />

			<arg value="./build/de.patrickkulling.air.mobile.extensions.ambientlight.ane" />

			<arg value="./build/ane/extension.xml" />

			<arg value="-swc" />
			<arg value="./build/ane/${swc.name}" />

			<arg value="-platform" />
			<arg value="Android-ARM" />

			<arg value="-C" />
			<arg value="./build/ane/Android-ARM" />
			<arg value="." />
		</java>

		<copy todir="../../extension/"
		      file="./build/de.patrickkulling.air.mobile.extensions.ambientlight.ane" />

		<copy todir="../../extension/" file="./build/ane/${swc.name}" />

		<delete dir="build" />

	</target>

</project>